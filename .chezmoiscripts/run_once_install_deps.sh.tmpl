# mac os
#################

{{ if eq .chezmoi.os "darwin" }}

# install fzf
~/.fzf/install --all

# install starship, fzf, zsh defaults
{{ template "install-starship.sh.tmpl" . }}
{{ template "install-fzf.sh.tmpl" . }}
{{ template "default-shell-zsh.sh.tmpl" . }}


{{ end -}}