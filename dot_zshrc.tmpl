#################
# editor
#################
{{- if eq .chezmoi.os "darwin" }}
# vscode
export EDITOR="code -w"
{{- end }}


#################
# zsh plugins
#################
# load zsh-syntax-highlighting
source "$HOME/.cli-plugins/zsh/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh"

# load zsh-completions
fpath=("$HOME/.cli-plugins/zsh/zsh-completions/" $fpath)

# completion styling to override case-sensitivity in zsh completions
zstyle ':completion:*' matcher-list 'm:{a-z}={A-Za-z}'
zstyle ':completion:*' list-colors 'no=00:fi=00:di=34:ln=35:pi=33:so=32:bd=34;46:cd=34;43:ex=31:su=37;41:sg=30;43:tw=30;42:ow=30;43:st=37;44:mi=05;37;41:or=05;37;41:'


# load zsh-autosuggestions
source "$HOME/.cli-plugins/zsh/zsh-autosuggestions/zsh-autosuggestions.zsh"

# autosuggestions history config
export HISTSIZE=10000
export HISTFILE=$HOME/.zsh_history
export SAVEHIST=$HISTSIZE
HISTDUP=erase
setopt appendhistory
setopt sharehistory
setopt hist_ignore_space
setopt hist_ignore_all_dups
setopt hist_save_no_dups
setopt hist_ignore_dups
setopt hist_find_no_dups

#################
# starship
#################
# start starship prompt
eval "$(starship init zsh)"
export STARSHIP_CONFIG=~/.config/starship/starship.toml

#################
# zoxide
#################
export PATH=$HOME/.local/bin:$PATH
eval "$(zoxide init --cmd cd zsh)"

#################
# key bindings
#################
# Navigate words using Ctrl + arrow keys
# >>> CRTL + right arrow | CRTL + left arrow
bindkey "^[[1;5C" forward-word
bindkey "^[[1;5D" backward-word

# zsh history
bindkey '^p' history-search-backward
bindkey '^n' history-search-forward


#################
# fzf
#################
# Set up path (due to Git install)
export PATH="$PATH:$HOME/.fzf/bin"

# Set up fzf key bindings and fuzzy completion
source <(fzf --zsh)

# Load fzf-git script
source "$HOME/.cli-plugins/fzf/fzf-git.sh"

#################
# fd 
#################
# mac only due to issues with fdfind

# Set up path (due to symlink)
#export PATH="$PATH:$HOME/.local/bin/fd"

# aliases
{{- if lookPath "fdfind" }}
alias fd=fdfind
{{- end }}


{{- if eq .chezmoi.os "darwin" }}

# Use fd instead of fzf
export FZF_DEFAULT_COMMAND="fd --hidden --strip-cwd-prefix --exclude .git"
export FZF_CTRL_T_COMMAND="$FZF_DEFAULT_COMMAND"
export FZF_ALT_C_COMMAND="fd --type=d --hidden --strip-cwd-prefix --exclude .git"


# Use fd (https://github.com/sharkdp/fd) for listing path candidates.
# - The first argument to the function ($1) is the base path to start traversal
# - See the source code (completion.{bash,zsh}) for the details.
_fzf_compgen_path() {
  fd --hidden --exclude .git . "$1"
}

# Use fd to generate the list for directory completion
_fzf_compgen_dir() {
  fd --type=d --hidden --exclude .git . "$1"
}
{{- end }}

#################
# eza
#################

# aliases
{{- if lookPath "eza" }}
alias ld='eza -lD --color=always --icons=always'
alias lf='eza -lF --color=always --icons=always'
alias lh='eza -dl .* --color=always --icons=always --group-directories-first'
alias ll='eza -al --icons=always --color=always --group-directories-first'
alias ls='eza -alF --color=always --icons=always'
alias lt='eza -al --color=always --icons=always --sort=modified'
{{- end }}

#################
# bat
#################

# Default bat theme
#export BAT_THEME='Monokai Extended'
export BAT_THEME=tokyonight_night

# aliases
{{- if lookPath "bat" }}
alias cat=bat
{{- else if lookPath "batcat" }}
alias cat=batcat
{{- end }}




