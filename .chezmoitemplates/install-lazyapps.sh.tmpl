#!/bin/bash

# ------------------------------------------
# install > lazydocker
# ------------------------------------------

if command -v docker &> /dev/null; then

  {{ if (eq .chezmoi.os "linux") -}}
    if [ ! -d "$HOME/.local/bin/lazydocker" ]; then
        echo "installing lazydocker..."
        curl https://raw.githubusercontent.com/jesseduffield/lazydocker/master/scripts/install_update_linux.sh | bash
    else
        echo "lazydocker already installed, skipping."
    fi

  {{ else if eq .chezmoi.os "darwin" }}
    if brew list --formula | grep -q "^lazydocker$"; then
      echo "lazydocker already installed, skipping."
    else
      echo "installing lazydocker..."
      brew install lazydocker
    fi
    {{ end -}}
else
    echo "docker not installed, skipping lazydocker installation."
fi

# ------------------------------------------
# install > lazygit
# ------------------------------------------

if command -v git &> /dev/null; then

  {{ if (eq .chezmoi.os "linux") -}}
    if [ ! -d "/usr/local/bin/lazygit" ]; then
        echo "installing lazygit..."

      LAZYGIT_VERSION=$(curl -s "https://api.github.com/repos/jesseduffield/lazygit/releases/latest" | \grep -Po '"tag_name": *"v\\K[^"]*')

      # check architecture and download the appropriate binary
      if [ "$(dpkg --print-architecture 2>/dev/null)" = "arm64" ]; then
        curl -Lo lazygit.tar.gz "https://github.com/jesseduffield/lazygit/releases/download/v${LAZYGIT_VERSION}/lazygit_${LAZYGIT_VERSION}_Linux_arm64.tar.gz"
      else
        curl -Lo lazygit.tar.gz "https://github.com/jesseduffield/lazygit/releases/download/v${LAZYGIT_VERSION}/lazygit_${LAZYGIT_VERSION}_Linux_x86_64.tar.gz"
      fi

      tar xf lazygit.tar.gz lazygit
      sudo install lazygit -D -t /usr/local/bin/
    else
        echo "lazygit already installed, skipping."
    fi

    {{ else if eq .chezmoi.os "darwin" }}

    if brew list --formula | grep -q "^lazygit$"; then
      echo "lazygit already installed, skipping."
    else
      echo "installing lazygit..."
      brew install lazygit
    fi
    {{ end -}}
else
    echo "git not installed, skipping lazygit installation."
fi